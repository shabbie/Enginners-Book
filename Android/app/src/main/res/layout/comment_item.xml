<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2e9e5e5">

    <LinearLayout
        android:id="@+id/linear_layout_comment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginRight="4dp"
            android:layout_weight="10"
            android:src="@drawable/jiggy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="90"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:text="Timestamp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linear_layout_comment"
        android:layout_alignStart="@+id/linear_layout_comment"
        android:layout_marginTop="8dp"
        android:text="This is comment text..."
        android:textSize="14sp"
        android:layout_below="@id/linear_layout_comment"/>

    <View
        android:layout_below="@+id/tv_comment"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"></View>

</RelativeLayout>
